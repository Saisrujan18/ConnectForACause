<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >

    <ImageView
        android:id="@+id/oimage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/otitle"
        android:layout_width="335dp"
        android:layout_height="26dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:text="Title of the Organisation"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/oimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activitycount"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="Active Events"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/oimage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:text="Some Info"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/oimage"
        app:layout_constraintTop_toBottomOf="@+id/otitle" />

</androidx.constraintlayout.widget.ConstraintLayout>