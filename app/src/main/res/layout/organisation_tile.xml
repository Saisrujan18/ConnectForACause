<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="1dp"

    android:layout_marginTop="2dp"
    android:paddingHorizontal="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintCircleRadius="50dp">

            <TextView
                android:id="@+id/otitle"
                android:layout_width="337dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="Title of the Organisation"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/oimage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/androidparty" />

                <TextView
                    android:id="@+id/notifications"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:text="Some Info in the middle of somewhere where no one came to see the one in the room and the original one got away"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/activitycount"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="Active Events"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>