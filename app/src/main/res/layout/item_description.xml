<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCard_Desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="4dp"
        android:src="#FF003C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/rounded_corner5">
    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:id="@+id/tvNGONameHeading"
        android:text="@string/organization_name"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:elevation="4dp"

        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/imgCard_Desc"
        app:layout_constraintStart_toStartOf="@id/imgCard_Desc"
        app:layout_constraintTop_toTopOf="@id/imgCard_Desc">
    </TextView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/NGOimg_Desc"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@color/white"
        android:elevation="4dp"

        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgCard_Desc"
        app:layout_constraintRight_toRightOf="@id/imgCard_Desc"
        app:layout_constraintTop_toTopOf="@id/imgCard_Desc"
        app:shapeAppearanceOverlay="@style/rounded_corner10">
    </com.google.android.material.imageview.ShapeableImageView>

    <ScrollView
        android:id="@+id/svDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"

        app:layout_constraintBottom_toBottomOf="@id/imgCard_Desc"
        app:layout_constraintEnd_toEndOf="@id/imgCard_Desc"
        app:layout_constraintStart_toStartOf="@id/imgCard_Desc"
        app:layout_constraintTop_toTopOf="@id/imgCard_Desc">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvNGODescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>